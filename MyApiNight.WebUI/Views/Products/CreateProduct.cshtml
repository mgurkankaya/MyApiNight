@model MyApiNight.WebUI.Dtos.CreateProductDto
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateCategory</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-3">
        <form method="post">
            <input type="text" asp-for="ProductName" class="form-control mt-2" placeholder="Ürün Adı" />
            <input type="text" asp-for="ProductPrice" class="form-control mt-2" placeholder="Ürün Fiyatı" />
            <input type="text" asp-for="ProductStock" class="form-control mt-2" placeholder="Ürün Stoğu" />
            <button type="submit" class="btn btn-outline-success mt-2">Ekle</button>
            <a class="btn btn-outline-danger mt-2" href="/Products/ProductList/">İptal</a>
        </form>
    </div>
</body>
</html>